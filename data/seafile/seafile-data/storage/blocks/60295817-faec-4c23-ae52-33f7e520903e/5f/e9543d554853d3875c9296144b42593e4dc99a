resource "terraform_data" "always_run" {
  triggers_replace = {
    timestamp = timestamp()
  }
}

resource "rancher2_cluster_sync" "wait_cluster_ready" {
  cluster_id = var.cluster_v1_id
  lifecycle {
    replace_triggered_by = [terraform_data.always_run]
  }
  depends_on = [terraform_data.nodes]
}