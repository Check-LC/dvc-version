resource "rancher2_auth_config_openldap" "openldap" {
  enabled                            = true
  access_mode                        = var.openldap_config.access_mode
  allowed_principal_ids              = var.openldap_config.allowed_principal_ids
  servers                            = var.openldap_config.servers
  port                               = var.openldap_config.port
  tls                                = false
  start_tls                          = false
  connection_timeout                 = 5000
  service_account_distinguished_name = var.openldap_config.binddn
  service_account_password           = var.openldap_config.bindpw
  user_search_base                   = var.openldap_config.user_search_base
  group_search_base                  = var.openldap_config.group_search_base
  user_object_class                  = var.openldap_config.user_object_class
  user_name_attribute                = var.openldap_config.user_name_attribute
  user_login_attribute               = var.openldap_config.user_login_attribute
  user_member_attribute              = var.openldap_config.user_member_attribute
  user_search_attribute              = var.openldap_config.user_search_attribute
  user_search_filter                 = var.openldap_config.user_search_filter
  user_enabled_attribute             = var.openldap_config.user_enabled_attribute
  group_object_class                 = var.openldap_config.group_object_class
  group_name_attribute               = var.openldap_config.group_name_attribute
  group_member_user_attribute        = var.openldap_config.group_member_user_attribute
  group_search_attribute             = var.openldap_config.group_search_attribute
  group_search_filter                = var.openldap_config.group_search_filter
  group_member_mapping_attribute     = var.openldap_config.group_member_mapping_attribute
  group_dn_attribute                 = var.openldap_config.group_dn_attribute
  nested_group_membership_enabled    = var.openldap_config.nested_group_membership_enabled
  test_username                      = var.openldap_config.test_username
  test_password                      = var.openldap_config.test_password
}